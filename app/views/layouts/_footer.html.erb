<footer class="footer">
  <div class="row">
    <div class="small-12 columns">
    <p class =links>
    <% if current_user %>
      <%= link_to "Movies", movies_path %> 
      <%= link_to "#{current_user.full_name}", root_path %>
      <%= link_to "Log out", session_path("current"), method: :delete %>
      <% if current_user.admin? %>
        <%= link_to "User Management", admin_users_path %>
      <% end %>
    <% else %>
      <%= link_to "Movies", movies_path %>
      <%= link_to "Log In", new_session_path %>
      <%= link_to "Sign Up", new_user_path %>
    <% end %>
    </p>
    </div>
  </div>
</footer>


